.bg{
    width: 100%;
    height: 380rpx;
    position: relative;
}
.bg .ks{
    display: block;
    width: 110rpx;
    height: 110rpx;
    border-radius: 100rpx;
    position: absolute;
    bottom: 20rpx;
    left: 330rpx;
    text-align: center;
    line-height: 110rpx;
    font-size: 34rpx;
    background: greenyellow;
}
.name{
    width: 100%;
    height: 80rpx;
    color: #ffffff;
    background: #000000;
    text-align: center;
    line-height: 80rpx;
}
.name .xlz{
    font-size: 30rpx;
}
.name view:nth-child(2){
    font-size: 30rpx;
    font-weight: bold;
}
.box{
    display: flex;
    height: 200rpx;
    border-bottom: 2rpx solid #eeeeee;
}
.con:nth-child(13){
    margin-bottom: 120rpx;
}
.box .box_img{
    width: 200rpx;
}
.box .box_img image{
    width: 200rpx;
    height: 200rpx;
}
.box .txt{
    flex-grow: 1;
    height: 200rpx;
    font-size: 36rpx;
    padding-left: 30rpx;
}
.box .txt .txt_item{
    height: 200rpx;
    line-height: 200rpx;
}
.box .txt .ts{
    margin-top: 120rpx;
    font-size: 32rpx;
    color: #999999;
}
.db{
    width: 100%;
    background: #000000;
    height: 120rpx;
    display: flex;
    position: fixed;
    z-index: 1000;
    bottom: 0;
}
.db .btn{
    width: 50%;
    height: 120rpx;
    background: #000000;
    color: #ffffff;
    line-height: 120rpx;
    font-size: 34rpx;
    border-radius: 0;
}
.db button:nth-child(1){
    border-right: 1rpx solid #999999;
}
.con video{
    width: 100%;
}


.con:nth-child(12){
    margin-bottom: 120rpx;
}
.con video{
    width: 100%;
}
.box{
    display: flex;
    border-bottom: 1rpx solid #eeeeee;
}
.box image{
    width: 200rpx;
    height: 200rpx;
}
.box .box_r{
    margin-left: 30rpx;
    flex-grow: 1;
    height: 200rpx;
    line-height: 200rpx;
}
.box .box_r text:nth-child(1){
    margin-right: 60rpx;
}
.video{
    border: 1px solid red;
}
.video video{
    height: 600rpx;
}
